{
  "overrides": [
    {
      "files": ["src/**/*.yml", "*.json"],
      "options": {
        "semi": false,
        "tabWidth": 2
      }
    },
    {
      "files": "src/**/*.ts",
      "options": {
        "semi": true,
        "trailingComma": "es5",
        "singleQuote": true,
        "tabWidth": 4
      }
    }
  ]
}
